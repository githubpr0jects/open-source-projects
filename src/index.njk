---
layout: base.njk
title: Home
pagination:
  data: collections.all
  size: 6
  alias: posts
  reverse: true
  addAllPagesToCollections: true
permalink: "{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

<section class="hero">
    <div class="hero-content">
        <h1 class="hero-title">
            Discover Amazing
            <span class="gradient-text">Open-source Projects</span>
        </h1>
        <p class="hero-description">
            Curating the best open-source projects, hidden gems, and innovative tools that are shaping the future of development.
        </p>
        <div class="hero-stats">
            <div class="stat">
                <span class="stat-number">{{ collections.all.length }}</span>
                <span class="stat-label">Projects Featured</span>
            </div>
            <div class="stat">
                <span class="stat-number">âˆž</span>
                <span class="stat-label">Possibilities</span>
            </div>
            <div class="stat">
                <span class="stat-number">100%</span>
                <span class="stat-label">Open Source</span>
            </div>
        </div>
    </div>
    <div class="hero-visual">
        <div class="code-window">
            <div class="window-header">
                <div class="window-controls">
                    <span class="control close"></span>
                    <span class="control minimize"></span>
                    <span class="control maximize"></span>
                </div>
                <span class="window-title">open-source-projects.json</span>
            </div>
            <div class="code-content">
                <pre><code>{
  "mission": "showcase_amazing_projects",
  "focus": ["innovation", "quality", "community"],
  "hidden_gems": true,
  "trending": true,
  "status": "actively_curated"
}</code></pre>
            </div>
        </div>
    </div>
</section>

<section class="projects-section">
    <div class="section-header">
        <h2 class="section-title">Featured Projects</h2>
        <p class="section-description">Hand-picked open-source projects that are making waves in the developer community</p>
    </div>
    
    <div class="projects-grid">
        {% for post in posts %}
            {% if post.data.layout == 'post.njk' %}
            <article class="project-card">
                <div class="card-header">
                    <div class="card-meta">
                        <span class="card-category">{{ post.data.category or "Open Source" }}</span>
                        <time class="card-date" datetime="{{ post.data.date | date('YYYY-MM-DD') }}">
                            {{ post.data.date | date('MMMM DD, YYYY') }}
                        </time>
                    </div>
                    {% if post.data.featured %}
                    <div class="featured-badge">
                        <i class="fas fa-star"></i>
                        <span>Featured</span>
                    </div>
                    {% endif %}
                </div>
                
                <div class="card-content">
                    <h3 class="card-title">
                        <a href="{{ post.url }}">{{ post.data.title }}</a>
                    </h3>
                    {% if post.data.excerpt %}
                    <p class="card-excerpt">{{ post.data.excerpt }}</p>
                    {% endif %}
                </div>

                {% if post.data.tags %}
                <div class="card-tags">
                    {% for tag in post.data.tags | slice(0, 3) %}
                    <span class="card-tag">{{ tag }}</span>
                    {% endfor %}
                    {% if post.data.tags.length > 3 %}
                    <span class="card-tag-more">+{{ post.data.tags.length - 3 }}</span>
                    {% endif %}
                </div>
                {% endif %}

                <div class="card-footer">
                    <div class="card-links">
                        {% if post.data.github_url %}
                        <a href="{{ post.data.github_url }}" class="card-link" target="_blank" rel="noopener">
                            <i class="fab fa-github"></i>
                        </a>
                        {% endif %}
                        {% if post.data.demo_url %}
                        <a href="{{ post.data.demo_url }}" class="card-link" target="_blank" rel="noopener">
                            <i class="fas fa-external-link-alt"></i>
                        </a>
                        {% endif %}
                    </div>
                    <a href="{{ post.url }}" class="read-more">
                        <span>Learn More</span>
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </article>
            {% endif %}
        {% endfor %}
    </div>
    
    {% include "pagination.njk" %}
</section>