---
layout: base.njk
---

<article class="post">
    <div class="post-hero">
        <div class="post-meta">
            <span class="post-category">{{ category or "Open Source" }}</span>
            <time class="post-date" datetime="{{ date | date('YYYY-MM-DD') }}">
                <i class="fas fa-calendar"></i>
                {{ date | date('MMMM DD, YYYY') }}
            </time>
        </div>
        <h1 class="post-title">{{ title }}</h1>
        {% if excerpt %}
        <p class="post-excerpt">{{ excerpt }}</p>
        {% endif %}
        
        {% if github_url or demo_url or website_url %}
        <div class="post-links">
            {% if github_url %}
            <a href="{{ github_url }}" class="post-link github-link" target="_blank" rel="noopener">
                <i class="fab fa-github"></i>
                <span>View on GitHub</span>
                <i class="fas fa-external-link-alt"></i>
            </a>
            {% endif %}
            {% if demo_url %}
            <a href="{{ demo_url }}" class="post-link demo-link" target="_blank" rel="noopener">
                <i class="fas fa-play"></i>
                <span>Live Demo</span>
                <i class="fas fa-external-link-alt"></i>
            </a>
            {% endif %}
            {% if website_url %}
            <a href="{{ website_url }}" class="post-link website-link" target="_blank" rel="noopener">
                <i class="fas fa-globe"></i>
                <span>Website</span>
                <i class="fas fa-external-link-alt"></i>
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>

    <div class="post-content">
        {{ content | safe }}
    </div>

    {% if tags %}
    <div class="post-tags">
        <h4>Technologies & Tags</h4>
        <div class="tags-list">
            {% for tag in tags %}
            <span class="tag">{{ tag }}</span>
            {% endfor %}
        </div>
    </div>
    {% endif %}

    <nav class="post-nav">
        <a href="/" class="back-link">
            <i class="fas fa-arrow-left"></i>
            <span>Back to Projects</span>
        </a>
    </nav>
</article>
